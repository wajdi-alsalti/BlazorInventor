<!-- MyModal.razor -->

<button class="btn btn-primary" @onclick="ShowModal">Open Modal</button>

<div class="modal" style="display: @(showModal ? "block" : "none")">
    <div class="container modal-content">
        <input class="form-control mb-3" @bind="InputData" />
        <button class="btn btn-primary" @onclick="Save">Save</button>
    </div>
</div>

@code {
    private bool showModal = false;
    private string InputData { get; set; }

    private void ShowModal()
    {
        showModal = true;
    }

    private void HideModal()
    {
        showModal = false;
    }

    private void Save()
    {
        // Handle the saved data here
        // You can use 'InputData' to get the value entered in the input field
        // For example, you could raise an event to pass the data to the parent component
        // or store it in a service, etc.

        // Close the modal after saving
        HideModal();
    }
}
